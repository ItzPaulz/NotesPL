<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesPL.Views.AboutPage"
             xmlns:viewModels="clr-namespace:NotesPL.ViewModels"
             Title="Paul Larrea"
             BackgroundColor="MediumPurple">
    <ContentPage.BindingContext>
        <viewModels:AboutViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="10" Margin="10">
        <Image Source="paul.jpg"
               SemanticProperties.Description="Estudiante de software apasionado"
               HeightRequest="200" />
        <Label Text="ESTUDIANTE DE SOFTWARE 5TO SEMESTRE QUE LE GUSTAN LOS DEPORTES, LOS VIDEOJUEGOS Y APRENDER COSAS NUEVAS"
               FontSize="18"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Margin="10" />
    </VerticalStackLayout>
</ContentPage>